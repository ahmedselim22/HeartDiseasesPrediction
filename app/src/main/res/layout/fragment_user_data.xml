<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.UserDataFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_24sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_asterisk"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/user_name"
            android:textColor="@color/gray"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_8sdp"
            />

        <EditText
            android:id="@+id/userData_et_userName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="@string/user_name"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:inputType="textPersonName"
            android:textColorHint="@color/hint_color"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:textSize="@dimen/_13ssp"
            android:background="@drawable/background_input"
            android:imeOptions="actionNext"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_email"
            android:textColor="@color/gray"
            android:drawableEnd="@drawable/ic_asterisk"
            android:drawablePadding="@dimen/_4sdp"
            android:padding="@dimen/_4sdp"
            android:textSize="@dimen/_14ssp"
            />

        <EditText
            android:id="@+id/userData_et_userEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:hint="@string/user_email"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textSize="@dimen/_13ssp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/hint_color"
            android:background="@drawable/background_input"
            android:imeOptions="actionNext"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp">
            <Button
                android:id="@+id/userData_btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:background="@drawable/btn_bg"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:imeOptions="actionDone"
                />
            <ProgressBar
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:id="@+id/userData_progressBar"
                />
        </FrameLayout>




    </LinearLayout>

</FrameLayout>